<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3FDFD"
    tools:context=".MainActivity">

    <!-- Instructions TextView -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Select one of the universities\n to show up logo:"
        android:textAlignment="center" />

    <!-- Spinner for selecting an option -->
    <Spinner
        android:id="@+id/spn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/university_array"
        android:layout_margin="10dp" />

    <!-- Button to trigger image and URL change -->
    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="show logo"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button" />

    <!-- Divider View -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <!-- TextView that will display the clickable website URL -->
    <TextView
        android:id="@+id/urlID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Official website..."
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="15dp" />

    <!-- ImageView to display the selected image -->
    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp" />

    <!-- Spacer View to push the copyright TextView to the bottom -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Copyright TextView positioned at the bottom of the screen -->
    <TextView
        android:id="@+id/copyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="© 2024 albaraxo 🥐"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
